<div class="container">
  <h4 class="my-4">編集画面</h4>
      <table class="table table-light table-bordered table-responsive-lg">
        <thead class="table-secondary">
          <th scope="col">項目</th>
          <th scope="col">内容</th>
        </thead>
      <%= form_with(model: @post, local: true) do |form| %>
        <tbody>
          <tr>
          <th class="w-25">ID</th>
            <td>
              <%= @post.id %>
            </td>
          </tr>
          <tr>
            <th>食べた日</th>
            <td>
              <%= form.text_field :event_date , class: "form-control" %>
            </td>
          </tr>
          <tr>
            <th>店名</th>
            <td>
              <%= form.text_field :shop_name , class: "form-control" %>
            </td>
          </tr>
          <tr>
            <th>メニュー</th>
            <td>
              <%= form.text_field :menu , class: "form-control" %>
            </td>
          <tr>
            <th>感想</th>
            <td>
              <%= form.text_area :comment , class: "form-control", rows:3 %>
            </td>
          </tr>
          <tr>
            <th>投稿日時</th>
            <td>
              <%= @post.created_at.strftime("%Y/%m/%d %H:%M:%S") %>
            </td>
          </tr>
          <tr>
            <th>更新日時</th>
            <td>
              <%= @post.updated_at.strftime("%Y/%m/%d %H:%M:%S") %>
            </td>
          </tr>
        </tbody>
      </table>
    <div class="text-center my-4">
      <%= form.submit "修正する" , class:"btn btn-primary" %>
    </div>
  <% end %>
</div>