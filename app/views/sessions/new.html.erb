<% provide(:title, 'ログイン') %>

<div class="mt-2 container">
<div class="pt-3">
  <h1>ログイン</h1>
</div>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(url: login_path, scope: :session, local: true) do |form| %>

    <div class="my-4">
      <%= form.label :メールアドレス, class:'form-label' %>
      <%= form.email_field :email , class: "form-control", placeholder: "abc@tabetalog.com" %>
    </div>
    <div class="my-4">
      <%= form.label :パスワード, class:'form-label' %>
      <%= form.password_field :password , class: "form-control", placeholder: "パスワードを入力してください" %>
    </div>
    <div class="my-3">
      <%= form.submit "ログイン", class: "btn btn-primary" %>
    </div>
    <% end %>

    <p>未登録の方はこちら <%= link_to "新規登録", signup_path %></p>
  </div>
</div>